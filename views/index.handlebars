<h1>Eat Da Burger!!</h1>
<h2>Not Devoured</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}

        <button class="change-sleep" data-id="{{id}}">{{#if devoured}}SLEEP TIME!{{else}}WAKE UP!{{/if}}
        </button>

        <button class="delete-cat" data-id="{{this.id}}">DELETE!</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{burger_name}}
    {{/if}}
    {{/each}}
</ul>



<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="bur" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>

</div>