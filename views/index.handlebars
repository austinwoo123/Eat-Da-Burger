<h1>Eat Da Burger!!</h1>
<h2>Not Devoured</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}

        {{!-- <button class="save-burger" data-id="{{this.id}}">Save for later!</button> --}}

        <button class="eat-burger" data-id="{{this.id}}">Eat!</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{burger_name}}
        <button class="save-burger" data-id="{{this.id}}">Save for later!</button>
        {{!-- <button class="save-burger" data-id="{{id}}">{{#if devoured}}Save For later!{{else}}Eat!{{/if}}
        </button> --}}
        {{!-- <button class="save-burger" data-id="{{id}}">{{#if devoured}}EAT!{{else}}Save For Later!{{/if}}
        </button> --}}
    </li>
    {{/if}}
    {{/each}}
</ul>



<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="addBurger">Burger Name:</label>
        <input type="text" id="addBurger" name="burger">
    </div>

    <button type="submit">Add Burger</button>
</form>

</div>

<script src="https://code.jquery.com/jquery.js"></script>
<script src="/assets/js/burgers.js"></script>